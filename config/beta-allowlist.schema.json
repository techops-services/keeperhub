{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Beta Allowlist",
  "description": "Configuration for beta access allowlist",
  "type": "object",
  "required": ["emails"],
  "properties": {
    "description": {
      "type": "string",
      "description": "Human-readable description of this file"
    },
    "emails": {
      "type": "array",
      "description": "List of email addresses allowed to access the beta",
      "items": {
        "type": "string",
        "format": "email"
      },
      "uniqueItems": true
    }
  }
}
